@code {

    private string inputText = "";
    private int contarPalabras = 0;

    private void ContarPalabras()
    {
        // Divide el texto en palabras usando espacios en blanco como separadores
        string[] palabra = inputText.Split(new char[] { ' ', '\t', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries);

        // Calcula el número de palabras
        contarPalabras = palabra.Length;
    }
}
