@page "/counter"

<PageTitle>Contador</PageTitle>

<h1>Contador de Palabras</h1>


<textarea @bind="inputText" rows="5" cols="150"></textarea>
<br>
<button @onclick="ContarPalabras">Contar</button>

<textarea rows="1" cols="5">@contarPalabras</textarea>

@* <output>@contarPalabras</output>
